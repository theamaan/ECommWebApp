<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/site.css")" />
</head>
<body>
    <header>
        <nav>
            <div class="left">
                <img src="https://m.media-amazon.com/images/I/71K0Zl4P25L._AC_SL1001_.jpg" alt="Site Logo">
                <ul>
                    @foreach (var category in ViewBag.Categories ?? new List<string>())
                    {
                        <li class="@category.ToLower()">
                            <a href="@Url.Action("Index", "Products", new { categoryName = category })">@category</a>
                        </li>
                    }
                </ul>
            </div>
            <div class="right">
                <input placeholder="Search for products, brands and more" class="desktop-searchBar" value="" data-reactid="904">
                <div class="icons">
                    <div class="profile" onclick="shoppingCart()">Profile</div>
                    <div class="wish">Wishlist</div>
                    <div class="bag">Bag</div>
                </div>
            </div>
        </nav>
    </header>
