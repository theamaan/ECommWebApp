@model List<ECommerceAppDemo.API.Models.Cart>

<h2>Shopping Cart</h2>

<table>
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BrandName @item.Model_Year</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>@(item.Quantity * item.Price)</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.Sum(i => i.Quantity * i.Price)</td>
        </tr>
    </tfoot>
</table>

<p>User Information:</p>
<p>Name: @Model.First().UName</p>
<p>Phone Number: @Model.First().PhoneNumber</p>
<p>Address: @Model.First().Adress, @Model.First().Pincode</p>
