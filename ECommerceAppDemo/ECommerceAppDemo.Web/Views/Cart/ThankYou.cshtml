@{
    Layout = null; // If you want this page to have a different layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thank You</title>
    <link href="~/Content/thankYou.css" rel="stylesheet" />
</head>
<body>
    <div class="thankyou-message">
        <h1>Thank you for shopping with us!</h1>
        <p>Do visit us again! Your order's invoice will download in a few seconds...</p>
    </div>

    <script>
        // Trigger the invoice download after the page loads
        window.onload = function() {
            setTimeout(function() {
                window.location.href = '@Url.Action("Invoice", "Cart")';
            }, 5000); // Adjust the delay as needed
        }
    </script>
</body>
</html>
